---
interface Props {
  label?: string;
  title: string;
  description?: string;
}

const { label, title, description } = Astro.props;
---

<div class="mx-auto max-w-2xl text-center mb-12">
  {label && (
    <p class="mb-3 text-sm font-semibold uppercase tracking-wider text-brand-500">{label}</p>
  )}
  <h2 class="text-3xl font-extrabold tracking-tight text-text sm:text-4xl">{title}</h2>
  {description && (
    <p class="mt-4 text-lg text-text-muted leading-relaxed">{description}</p>
  )}
</div>
