---
import SectionHeading from './SectionHeading.astro';

const yes = [
  'Desarrolladores Junior que quieren construir SaaS reales',
  'Desarrolladores Intermedios que quieren 10x su velocidad con AI',
  'Founders técnicos que necesitan lanzar rápido',
  'Cualquiera que sepa algo de código y quiera construir productos completos',
];

const no = [
  'Nunca tocaste código (necesitás bases mínimas)',
  'Buscás un curso teórico o grabado',
  'No querés construir en vivo',
];
---

<section class="py-12 sm:py-16" aria-labelledby="for-who-heading">
  <div class="mx-auto max-w-6xl px-4 sm:px-6">
    <SectionHeading
      title="¿Este curso es para vos?"
    />

    <div class="mx-auto grid max-w-3xl gap-6 sm:grid-cols-2">
      <!-- Yes -->
      <div class="rounded-2xl border border-brand-500/30 bg-brand-50 p-6">
        <p class="mb-4 text-sm font-bold uppercase tracking-wider text-brand-500">Sí, es para vos si:</p>
        <ul class="space-y-3">
          {yes.map((item) => (
            <li class="flex items-start gap-2.5 text-sm text-text">
              <svg class="mt-0.5 h-4 w-4 shrink-0 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              <span>{item}</span>
            </li>
          ))}
        </ul>
      </div>

      <!-- No -->
      <div class="rounded-2xl border border-border bg-surface-alt p-6">
        <p class="mb-4 text-sm font-bold uppercase tracking-wider text-text-muted">No es para vos si:</p>
        <ul class="space-y-3">
          {no.map((item) => (
            <li class="flex items-start gap-2.5 text-sm text-text-muted">
              <svg class="mt-0.5 h-4 w-4 shrink-0 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
              <span>{item}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>
