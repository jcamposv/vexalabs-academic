---
const links = [
  { label: 'Programa', href: '#programa' },
  { label: 'Qué construís', href: '#proyectos' },
  { label: 'Instructor', href: '#instructor' },
  { label: 'Precios', href: '#precios' },
  { label: 'FAQ', href: '#faq' },
];
---

<nav
  class="sticky top-0 z-40 w-full border-b border-border bg-surface/80 backdrop-blur-lg"
  aria-label="Navegación principal"
>
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3 sm:px-6">
    <!-- Logo -->
    <a href="/" class="flex items-center">
      <img src="/logo-vexalabs-academy.svg" alt="VexaLabs Academy" class="h-8" />
    </a>

    <!-- Desktop links -->
    <div class="hidden items-center gap-6 md:flex">
      {links.map(({ label, href }) => (
        <a
          href={href}
          class="text-sm font-medium text-text-muted transition-colors hover:text-brand-500"
        >
          {label}
        </a>
      ))}
      <a
        href="#precios"
        class="inline-flex items-center rounded-xl bg-brand-500 px-5 py-2 text-sm font-semibold text-surface transition-all hover:bg-brand-400 shadow-sm hover:shadow-md"
      >
        Aplicar
      </a>
    </div>

    <!-- Mobile hamburger -->
    <button
      id="mobile-menu-btn"
      class="flex h-10 w-10 items-center justify-center rounded-lg text-text-muted transition-colors hover:bg-surface-muted md:hidden cursor-pointer"
      aria-label="Abrir menú"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Mobile menu -->
  <div
    id="mobile-menu"
    class="hidden border-t border-border bg-surface px-4 pb-4 pt-2 md:hidden"
    role="menu"
  >
    {links.map(({ label, href }) => (
      <a
        href={href}
        class="block rounded-lg px-3 py-2.5 text-sm font-medium text-text-muted transition-colors hover:bg-surface-muted hover:text-brand-500"
        role="menuitem"
      >
        {label}
      </a>
    ))}
    <a
      href="#precios"
      class="mt-2 block rounded-xl bg-brand-500 px-5 py-2.5 text-center text-sm font-semibold text-surface transition-all hover:bg-brand-400"
      role="menuitem"
    >
      Aplicar
    </a>
  </div>
</nav>

<script>
  document.addEventListener('astro:page-load', () => {
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    if (!btn || !menu) return;

    btn.addEventListener('click', () => {
      const expanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!expanded));
      menu.classList.toggle('hidden');
    });

    menu.querySelectorAll('a').forEach((link) => {
      link.addEventListener('click', () => {
        menu.classList.add('hidden');
        btn.setAttribute('aria-expanded', 'false');
      });
    });
  });
</script>
