<section class="border-b border-border bg-surface-alt py-12 sm:py-16" aria-label="Stack del curso">
  <div class="mx-auto max-w-6xl px-4 sm:px-6">
    <p class="mb-8 text-center text-sm font-semibold uppercase tracking-wider text-text-muted">
      El stack que vas a dominar
    </p>
    <div class="flex flex-wrap items-center justify-center gap-6 sm:gap-10">
      {tools.map((tool) => (
        <div class="group flex flex-col items-center gap-2 transition-transform duration-200 hover:-translate-y-1">
          <div class="flex h-10 w-10 items-center justify-center sm:h-12 sm:w-12" aria-hidden="true">
            <Fragment set:html={tool.svg} />
          </div>
          <span class="text-xs font-medium text-text-muted group-hover:text-brand-500 transition-colors">
            {tool.name}
