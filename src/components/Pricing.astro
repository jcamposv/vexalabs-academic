---
import SectionHeading from './SectionHeading.astro';
import Button from './Button.astro';
import Badge from './Badge.astro';

const SKOOL_URL = 'https://www.skool.com/vexalabs-academy/about';

const plans = [
  {
    name: 'Live Cohort',
    price: '$149',
    period: 'USD',
    description: 'Todo lo que necesitas para construir y lanzar tu producto.',
    featured: false,
    checkoutUrl: SKOOL_URL,
    includes: [
      '8 sesiones en vivo (4 semanas)',
      '4 SaaS construidos y deployados',
      'Módulo de pagos con LemonSqueezy',
      'Grabaciones permanentes',
      'Repo template profesional',
      'Comunidad Skool',
    ],
  },
  {
    name: 'Live Cohort + 1:1',
    price: '$249',
    period: 'USD',
    description: 'Todo lo del plan Live + mentoría personalizada.',
    featured: true,
    checkoutUrl: SKOOL_URL,
    includes: [
      'Todo lo del plan Live Cohort',
      '4 sesiones 1:1 de 30 min',
      'Code review prioritario',
      'Revisión de arquitectura personalizada',
      'Soporte directo por DM',
      'Acceso a futuras cohortes (auditor)',
    ],
  },
];
---

<section id="precios" class="py-12 sm:py-16" aria-labelledby="pricing-heading">
  <div class="mx-auto max-w-6xl px-4 sm:px-6">
    <SectionHeading
      label="Precios"
      title="Invierte en tu próximo nivel"
      description="Elige el plan que se ajuste a tu ritmo. Ambos incluyen todo el contenido del curso."
    />

    <div class="mx-auto grid max-w-4xl gap-8 md:grid-cols-2">
      {plans.map((plan) => (
        <div
          class:list={[
            'relative flex flex-col rounded-2xl border p-8 transition-shadow duration-200',
            plan.featured
              ? 'border-brand-500/40 bg-surface-alt shadow-xl shadow-brand-500/10 ring-1 ring-brand-500/20'
              : 'border-border bg-surface-alt hover:shadow-lg hover:shadow-brand-500/5',
          ]}
        >
          {plan.featured && (
            <div class="absolute -top-3 left-1/2 -translate-x-1/2">
              <Badge>Recomendado</Badge>
            </div>
          )}

          <h3 class="text-xl font-bold text-text">{plan.name}</h3>
          <p class="mt-1 text-sm text-text-muted">{plan.description}</p>

          <div class="mt-6 flex items-baseline gap-1">
            <span class="text-4xl font-extrabold text-text">{plan.price}</span>
            <span class="text-sm text-text-muted">{plan.period}</span>
          </div>

          <ul class="mt-8 flex-1 space-y-3">
            {plan.includes.map((item) => (
              <li class="flex items-start gap-2.5 text-sm">
                <svg class="mt-0.5 h-4 w-4 shrink-0 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
                <span class="text-text-muted">{item}</span>
              </li>
            ))}
          </ul>

          <div class="mt-8">
            <a
              href={plan.checkoutUrl}
              target="_blank"
              rel="noopener noreferrer"
              data-plan={plan.name}
              data-price={plan.price}
              class:list={[
                'checkout-btn flex w-full items-center justify-center rounded-xl px-6 py-3 text-sm font-semibold transition-all',
                plan.featured
                  ? 'bg-brand-500 text-surface shadow-sm hover:bg-brand-400 hover:shadow-md'
                  : 'border border-border bg-surface-muted text-text hover:border-brand-500/40 hover:text-brand-500',
              ]}
            >
              Unirse a la comunidad
            </a>
          </div>
        </div>
      ))}
    </div>

    <!-- Refund guarantee -->
    <div class="mx-auto mt-8 max-w-lg rounded-2xl border border-brand-500/20 bg-brand-50 p-5 text-center">
      <div class="mb-2 flex items-center justify-center gap-2">
        <svg class="h-5 w-5 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
        </svg>
        <span class="text-sm font-bold text-text">Garantía después de la primera clase</span>
      </div>
      <p class="text-sm text-text-muted">
        Si después de la primera sesión sentís que no es para vos, te devolvemos el 100% del pago. Sin preguntas. <a href="/politica-de-devolucion" class="underline underline-offset-2 text-brand-500">Ver política completa</a>.
      </p>
    </div>

    <!-- Limited spots notice -->
    <p class="mt-6 text-center text-sm text-text-muted">
      <span class="inline-flex items-center gap-1.5">
        <span class="relative flex h-2 w-2">
          <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-brand-400 opacity-75"></span>
          <span class="relative inline-flex h-2 w-2 rounded-full bg-brand-500"></span>
        </span>
        Inicia lunes 16 de marzo — Cupos limitados (máximo 30 personas)
      </span>
    </p>
  </div>
</section>

<script>
  // Facebook Pixel — InitiateCheckout
  document.querySelectorAll('.checkout-btn').forEach((btn) => {
    btn.addEventListener('click', () => {
      const price = parseFloat((btn as HTMLElement).dataset.price?.replace('$', '') || '0');
      const plan = (btn as HTMLElement).dataset.plan || '';
      if (typeof fbq !== 'undefined') {
        fbq('track', 'InitiateCheckout', {
          value: price,
          currency: 'USD',
          content_name: plan,
        });
      }
    });
  });
</script>
