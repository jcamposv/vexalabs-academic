---
import SectionHeading from './SectionHeading.astro';
import Button from './Button.astro';
import Badge from './Badge.astro';

const plans = [
  {
    name: 'Live Cohort',
    price: '$149',
    period: 'USD',
    description: 'Todo lo que necesitas para construir y lanzar tu producto.',
    featured: false,
    includes: [
      '8 sesiones en vivo (4 semanas)',
      '4 SaaS construidos y deployados',
      'Módulo de pagos con LemonSqueezy',
      'Grabaciones permanentes',
      'Repo template profesional',
      'Comunidad Discord',
    ],
  },
  {
    name: 'Live Cohort + 1:1',
    price: '$249',
    period: 'USD',
    description: 'Todo lo del plan Live + mentoría personalizada.',
    featured: true,
    includes: [
      'Todo lo del plan Live Cohort',
      '4 sesiones 1:1 de 30 min',
      'Code review prioritario',
      'Revisión de arquitectura personalizada',
      'Soporte directo por DM',
      'Acceso a futuras cohortes (auditor)',
    ],
  },
];
---

<section id="precios" class="py-12 sm:py-16" aria-labelledby="pricing-heading">
  <div class="mx-auto max-w-6xl px-4 sm:px-6">
    <SectionHeading
      label="Precios"
      title="Invierte en tu próximo nivel"
      description="Elige el plan que se ajuste a tu ritmo. Ambos incluyen todo el contenido del curso."
    />

    <div class="mx-auto grid max-w-4xl gap-8 md:grid-cols-2">
      {plans.map((plan) => (
        <div
          class:list={[
            'relative flex flex-col rounded-2xl border p-8 transition-shadow duration-200',
            plan.featured
              ? 'border-brand-500/40 bg-surface-alt shadow-xl shadow-brand-500/10 ring-1 ring-brand-500/20'
              : 'border-border bg-surface-alt hover:shadow-lg hover:shadow-brand-500/5',
          ]}
        >
          {plan.featured && (
            <div class="absolute -top-3 left-1/2 -translate-x-1/2">
              <Badge>Recomendado</Badge>
            </div>
          )}

          <h3 class="text-xl font-bold text-text">{plan.name}</h3>
          <p class="mt-1 text-sm text-text-muted">{plan.description}</p>

          <div class="mt-6 flex items-baseline gap-1">
            <span class="text-4xl font-extrabold text-text">{plan.price}</span>
            <span class="text-sm text-text-muted">{plan.period}</span>
          </div>

          <ul class="mt-8 flex-1 space-y-3">
            {plan.includes.map((item) => (
              <li class="flex items-start gap-2.5 text-sm">
                <svg class="mt-0.5 h-4 w-4 shrink-0 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
                <span class="text-text-muted">{item}</span>
              </li>
            ))}
          </ul>

          <div class="mt-8">
            <Button
              href="#"
              variant={plan.featured ? 'primary' : 'secondary'}
              size="lg"
              class="w-full"
            >
              Reservar cupo
            </Button>
          </div>
        </div>
      ))}
    </div>

    <!-- Limited spots notice -->
    <p class="mt-8 text-center text-sm text-text-muted">
      <span class="inline-flex items-center gap-1.5">
        <span class="relative flex h-2 w-2">
          <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-brand-400 opacity-75"></span>
          <span class="relative inline-flex h-2 w-2 rounded-full bg-brand-500"></span>
        </span>
        Cupos limitados — máximo 30 personas por cohorte
      </span>
    </p>
  </div>
</section>
